source 'https://rubygems.org'

ruby "2.2.3"

# Middleman core
gem "middleman", "~> 3.4.1"

# Sync to S3
gem 'middleman-s3_sync', '~> 3.3', '>= 3.3.9'

# Search engine sitemap
gem 'middleman-search_engine_sitemap'

# Live-reloading plugin
gem "middleman-livereload", "~> 3.4", ">= 3.4.6"

# Syntax highlighting
gem "middleman-rouge"

# Markdown engine
gem "redcarpet"

# Rake
gem 'rake'

# Styling libraries
gem 'bitters', '~> 1.2'
gem 'bourbon', '~> 4.2', '>= 4.2.6'
gem 'neat', '~> 1.7', '>= 1.7.4'

# Integration tests
gem 'rspec', '~> 3.4'
gem 'capybara', '~> 2.4.4'

# Guard
gem "guard"
gem "guard-shell"
gem "terminal-notifier-guard"
